@use './token-utils' as *;

@forward './token-utils';

@mixin host {
  display: inline-block;
  box-sizing: content-box;
  contain: content;

  font-size: #{token(font-size)};
}

@mixin base {
  width: #{token(width)};
  height: #{token(height)};
}

@mixin svg {
  @include base;

  display: block;

  fill: #{token(color)};
  stroke: #{token(color)};
  stroke-width: 0;
}
