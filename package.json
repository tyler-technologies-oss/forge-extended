{
  "name": "forge-extended",
  "private": true,
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "dev:data-table": "pnpm run dev --filter=@tylertech/forge-data-table",
    "dev:extended": "pnpm run dev --filter=@tylertech/forge-extended",
    "dev:extended-angular": "pnpm run dev --filter=@tylertech/forge-extended-angular",
    "dev:extended-react": "pnpm run dev --filter=@tylertech/forge-extended-react",
    "storybook:extended": "turbo run storybook --filter=@tylertech/forge-extended"
  },
  "dependencies": {
    "prettier": "^3.4.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.2",
    "commitlint": "^19.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "only-allow": "^1.2.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "**/*": "pnpm run format"
  },
  "pnpm": {
    "overrides": {
      "reactify-wc>react": ">=17"
    }
  }
}
