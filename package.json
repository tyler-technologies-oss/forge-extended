{
  "name": "@tylertech/forge-extended",
  "version": "0.1.0",
  "description": "A library of prebuilt components based on Tyler Forgeâ„¢ patterns and recipes.",
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "main": "index.mjs",
  "module": "index.mjs",
  "typings": "index.d.ts",
  "customElements": "custom-elements.json",
  "keywords": [
    "tyler-forge",
    "web-components",
    "custom-elements",
    "lit-element"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyler-technologies-oss/forge-extended.git"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "vite",
    "start": "npm run storybook",
    "prebuild": "rimraf dist",
    "build": "npm run lint && vite build && npm run cem",
    "postbuild": "node ./scripts/postbuild.mjs",
    "preview": "vite preview",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:stylelint": "stylelint src/**/*.scss",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --ignore-path ./.prettierignore --ignore-path ./.gitignore --write",
    "cem": "cem analyze --litelement --globs \"src/lib/**/*.ts\" --outdir dist",
    "cem:watch": "npm run analyze -- --watch",
    "test": "wtr --coverage --watch --group lib",
    "test:ci": "wtr --group lib",
    "ci:package": "tar -czvhf deployment-assets.tar.gz -C cdn-deployment/@tylertech/forge-extended .",
    "release": "auto shipit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "lit": "^3.1.4"
  },
  "peerDependencies": {
    "@tylertech/forge": "^3.0.0"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^11.1.6",
    "@auto-it/first-time-contributor": "^11.1.6",
    "@auto-it/npm": "^11.1.6",
    "@chromatic-com/storybook": "^1.5.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@custom-elements-manifest/analyzer": "^0.10.2",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-a11y": "^8.1.10",
    "@storybook/addon-essentials": "^8.1.10",
    "@storybook/addon-links": "^8.1.10",
    "@storybook/addon-measure": "^8.1.10",
    "@storybook/addon-themes": "^8.1.10",
    "@storybook/addon-viewport": "^8.1.10",
    "@storybook/blocks": "^8.1.10",
    "@storybook/test": "^8.1.10",
    "@storybook/web-components": "^8.1.10",
    "@storybook/web-components-vite": "^8.1.10",
    "@tylertech-eslint/eslint-plugin": "^1.0.12",
    "@tylertech/forge": "^3.0.0",
    "@tylertech/stylelint-rules": "^5.1.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.8",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/test-runner": "^0.18.2",
    "@web/test-runner-junit-reporter": "^0.7.1",
    "@web/test-runner-playwright": "^0.11.0",
    "auto": "^11.1.6",
    "commitlint": "^19.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "lit-analyzer": "^2.0.3",
    "postcss-lit": "^1.1.1",
    "prettier": "^3.3.2",
    "remark-gfm": "^4.0.0",
    "rimraf": "^5.0.7",
    "sass": "1.77.6",
    "sinon": "^18.0.0",
    "storybook": "^8.1.10",
    "storybook-dark-mode": "^4.0.2",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "ts-lit-plugin": "^2.0.2",
    "typescript": "~5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "lint-staged": {
    "**/*": "npm run format"
  }
}
