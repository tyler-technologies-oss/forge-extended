{
  "name": "forge-extended",
  "private": true,
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "packageManager": "pnpm@10.2.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10"
  },
  "scripts": {
    "prepare": "husky",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "changeset:version": "changeset version && turbo run changeset:version",
    "build": "turbo run build",
    "build:extended": "pnpm run --filter=@tylertech/forge-extended build",
    "build:extended-angular": "pnpm run --filter=@tylertech/forge-extended-angular build",
    "build:extended-react": "pnpm run --filter=@tylertech/forge-extended-react build",
    "lint": "turbo run lint",
    "release": "pnpm run build && changeset publish",
    "test": "turbo run test:ci",
    "test:extended": "pnpm run --filter=@tylertech/forge-extended test",
    "test:extended-angular": "pnpm run --filter=@tylertech/forge-extended-angular test",
    "test:extended-react": "pnpm run --filter=@tylertech/forge-extended-react test",
    "dev": "turbo run dev",
    "dev:extended": "pnpm run --filter=@tylertech/forge-extended dev",
    "dev:extended-angular": "pnpm run --filter=@tylertech/forge-extended-angular dev",
    "dev:extended-react": "pnpm run --filter=@tylertech/forge-extended-react dev",
    "storybook:extended": "turbo run storybook --filter=@tylertech/forge-extended",
    "build:storybook:extended": "pnpm run --filter=@tylertech/forge-extended build:storybook ",
    "plop:extended": "pnpm run --filter=@tylertech/forge-extended plop"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.12",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@repo/prettier-config": "workspace:",
    "@types/node": "catalog:",
    "commitlint": "^19.7.1",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "catalog:",
    "turbo": "^2.4.1",
    "vite-plugin-ejs": "^1.7.0",
    "vite-plugin-full-reload": "^1.2.0"
  },
  "pnpm": {
    "overrides": {
      "reactify-wc>react": ">=17"
    },
    "patchedDependencies": {
      "@changesets/assemble-release-plan@6.0.5": "patches/@changesets__assemble-release-plan@6.0.5.patch"
    }
  }
}
