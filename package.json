{
  "name": "forge-extended",
  "private": true,
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "turbo run build",
    "build:extended": "pnpm run --filter=@tylertech/forge-extended build",
    "build:extended-angular": "pnpm run --filter=@tylertech/forge-extended-angular build",
    "build:extended-react": "pnpm run --filter=@tylertech/forge-extended-react build",
    "lint": "turbo run lint",
    "test:ci": "turbo run test:ci",
    "test:extended": "pnpm run --filter=@tylertech/forge-extended test",
    "test:extended-angular": "pnpm run --filter=@tylertech/forge-extended-angular test",
    "test:extended-react": "pnpm run --filter=@tylertech/forge-extended-react test",
    "dev": "turbo run dev",
    "dev:extended": "pnpm run --filter=@tylertech/forge-extended dev",
    "dev:extended-angular": "pnpm run --filter=@tylertech/forge-extended-angular dev",
    "dev:extended-react": "pnpm run --filter=@tylertech/forge-extended-react dev",
    "storybook:extended": "turbo run storybook --filter=@tylertech/forge-extended"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "catalog:",
    "commitlint": "^19.6.1",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  },
  "pnpm": {
    "overrides": {
      "reactify-wc>react": ">=17"
    }
  }
}
