  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    },
    "./package.json": {
      "default": "./package.json"
    },
    "./custom-elements.json": {
      "default": "./custom-elements.json"
    }
  },
  "customElements": "custom-elements.json",
  "keywords": [
    "tyler-forge",
    "web-components",
    "custom-elements",
    "lit-element"
