{
  "name": "@tylertech/data-table",
  "version": "0.1.0",
  "description": "A library of prebuilt components based on Tyler Forgeâ„¢ patterns and recipes.",
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "main": "index.mjs",
  "module": "index.mjs",
  "typings": "index.d.ts",
  "customElements": "custom-elements.json",
  "keywords": [
    "tyler-forge",
    "web-components",
    "custom-elements",
    "lit-element"
  ],
  "files": [
    "./dist",
    "./custom-elements.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyler-technologies-oss/forge-extended.git"
  },
  "scripts": {
    "dev": "vite",
    "start": "npm run storybook",
    "prebuild": "rimraf dist",
    "build": "npm run lint && vite build && npm run cem",
    "preview": "vite preview",
    "prestorybook": "npm run cem",
    "storybook": "storybook dev -p 6017",
    "build:storybook": "storybook build",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint -c .eslintrc.json --parser-options tsconfigRootDir:. 'src/**/*.ts'",
    "lint:stylelint": "stylelint src/**/*.scss",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --ignore-path ./.prettierignore --ignore-path ./.gitignore --write",
    "cem": "cem analyze --litelement --globs \"src/lib/**/*.ts\"",
    "cem:watch": "npm run analyze -- --watch",
    "test": "wtr --coverage --watch",
    "test:ci": "wtr"
  },
  "dependencies": {
    "@tanstack/lit-table": "^8.20.5",
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@tylertech-eslint/eslint-plugin": "^2.1.0",
    "@tylertech/forge": "^3.4.0",
    "@tylertech/stylelint-rules": "^5.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@web/dev-server-esbuild": "^1.0.3",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-junit-reporter": "^0.7.2",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "lit-analyzer": "^2.0.3",
    "postcss-lit": "^1.1.1",
    "remark-gfm": "^4.0.0",
    "rimraf": "^6.0.1",
    "sass": "1.83.0",
    "sinon": "^19.0.2",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "~5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
