{
  "name": "@tylertech/forge-extended",
  "version": "0.2.0",
  "description": "A library of prebuilt components based on Tyler Forgeâ„¢ patterns and recipes.",
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "customElements": "custom-elements.json",
  "keywords": [
    "tyler-forge",
    "web-components",
    "custom-elements",
    "lit-element"
  ],
  "files": [
    "./dist",
    "./custom-elements.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyler-technologies-oss/forge-extended.git"
  },
  "scripts": {
    "dev": "vite",
    "start": "npm run storybook",
    "prebuild": "rimraf dist",
    "build": "npm run lint && vite build && npm run cem",
    "preview": "vite preview",
    "prestorybook": "npm run cem",
    "storybook": "storybook dev -p 6016",
    "prebuild:storybook": "npm run cem",
    "build:storybook": "storybook build",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint -c .eslintrc.json --parser-options tsconfigRootDir:. 'src/lib/**/*.ts'",
    "lint:stylelint": "stylelint src/**/*.scss",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --ignore-path ./.prettierignore --ignore-path ./.gitignore --write",
    "cem": "cem analyze --litelement --globs \"src/lib/**/*.ts\"",
    "cem:watch": "npm run analyze -- --watch",
    "test": "wtr --coverage --watch --group lib",
    "test:focus": "wtr --coverage --watch --group",
    "test:ci": "wtr --group lib",
    "ci:package": "tar -czvhf deployment-assets.tar.gz -C cdn-deployment/@tylertech/forge-extended ."
  },
  "dependencies": {
    "@tylertech/tyler-icons": "^1.18.1",
    "lit": "^3.2.1"
  },
  "peerDependencies": {
    "@tylertech/forge": "^3.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-a11y": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-measure": "^8.4.7",
    "@storybook/addon-themes": "^8.4.7",
    "@storybook/addon-viewport": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/preview-api": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/theming": "^8.4.7",
    "@storybook/web-components": "^8.4.7",
    "@storybook/web-components-vite": "^8.4.7",
    "@tylertech-eslint/eslint-plugin": "^2.1.0",
    "@tylertech/forge": "^3.4.0",
    "@tylertech/stylelint-rules": "^5.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@web/dev-server-esbuild": "^1.0.3",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-junit-reporter": "^0.7.2",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "lit-analyzer": "^2.0.3",
    "postcss-lit": "^1.1.1",
    "prettier": "^3.4.2",
    "remark-gfm": "^4.0.0",
    "rimraf": "^6.0.1",
    "sass": "1.83.0",
    "sinon": "^19.0.2",
    "storybook": "^8.4.7",
    "storybook-dark-mode": "^4.0.2",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "~5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
