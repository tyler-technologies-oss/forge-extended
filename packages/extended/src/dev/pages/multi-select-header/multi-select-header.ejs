<h2>Default behavior with selected count:</h2>
<forge-multi-select-header selected-count="3">
  <div slot="actions">
    <forge-icon-button aria-label="Select all items">
      <forge-icon name="check"></forge-icon>
    </forge-icon-button>
    <forge-icon-button aria-label="Clear selection">
      <forge-icon name="clear"></forge-icon>
    </forge-icon-button>
    <forge-icon-button aria-label="More actions">
      <forge-icon name="more_vert"></forge-icon>
    </forge-icon-button>
  </div>
</forge-multi-select-header>

<h2>With custom selected text suffix:</h2>
<forge-multi-select-header selected-count="3" selected-text="rows selected for processing">
  <div slot="actions">
    <forge-icon-button aria-label="Select all items">
      <forge-icon name="check"></forge-icon>
    </forge-icon-button>
    <forge-icon-button aria-label="Clear selection">
      <forge-icon name="clear"></forge-icon>
    </forge-icon-button>
    <forge-icon-button aria-label="More actions">
      <forge-icon name="more_vert"></forge-icon>
    </forge-icon-button>
  </div>
</forge-multi-select-header>


