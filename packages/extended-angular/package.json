{
  "name": "@tylertech/forge-extended-angular",
  "version": "0.1.0",
  "description": "Forge components adapter library for Angular",
  "private": true,
  "repository": "tyler-technologies-oss/forge-extended",
  "license": "Apache-2.0",
  "publishConfig": {
    "directory": "./dist/forge-extended-angular",
    "linkDirectory": true
  },
  "scripts": {
    "start": "pnpm build && ng serve -o",
    "dev": "pnpm start",
    "build": "pnpm run generate-proxies && ng build forge-extended-angular --configuration production",
    "build:demo": "ng build --configuration production --stats-json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "analyze:bundle": "webpack-bundle-analyzer dist/forge-extended-angular-demo/stats.json",
    "generate-proxies": "ng generate @tylertech/forge-schematics:custom-elements --config generate-proxies.json --interactive=false && prettier --write ./projects/forge-extended-angular/src/lib/**/*.ts"
  },
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@tylertech/forge": "catalog:",
    "@tylertech/forge-angular": "^4.2.0",
    "@tylertech/forge-core": "catalog:",
    "@tylertech/forge-extended": "workspace:*",
    "@tylertech/tyler-icons": "catalog:",
    "rxjs": "~7.5.0",
    "tslib": "^2.8.1",
    "zone.js": "~0.14.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.12",
    "@angular/cli": "^18.2.12",
    "@angular/compiler-cli": "^18.2.13",
    "@tylertech-eslint/eslint-plugin": "catalog:",
    "@tylertech/forge-schematics": "^1.3.1",
    "@types/jasmine": "~5.1.5",
    "@types/node": "catalog:",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.2.1",
    "typescript": "~5.4.5"
  }
}
