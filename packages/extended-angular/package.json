{
  "name": "@tylertech/forge-extended-angular",
  "version": "1.2.0",
  "description": "Forge components adapter library for Angular",
  "repository": "tyler-technologies-oss/forge-extended",
  "license": "Apache-2.0",
  "publishConfig": {
    "directory": "./dist/forge-extended-angular",
    "linkDirectory": true
  },
  "scripts": {
    "start": "pnpm build && ng serve -o",
    "dev": "pnpm start",
    "build": "pnpm run sync-version && pnpm run generate-proxies && ng build forge-extended-angular --configuration production",
    "build:demo": "ng build --configuration production --stats-json",
    "watch": "ng build --watch --configuration development",
    "lint": "eslint .",
    "test": "ng test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "sync-version": "node ./scripts/sync-version.mjs",
    "changeset:version": "pnpm run sync-version",
    "analyze:bundle": "webpack-bundle-analyzer dist/forge-extended-angular-demo/stats.json",
    "generate-proxies": "ng generate @tylertech/forge-schematics:custom-elements --config generate-proxies.json --interactive=false && prettier --write ./projects/forge-extended-angular/src/lib/**/*.ts"
  },
  "dependencies": {
    "@angular/animations": "^20.3.13",
    "@angular/common": "^20.3.13",
    "@angular/compiler": "^20.3.13",
    "@angular/core": "^20.3.13",
    "@angular/forms": "^20.3.13",
    "@angular/platform-browser": "^20.3.13",
    "@angular/platform-browser-dynamic": "^20.3.13",
    "@angular/router": "^20.3.13",
    "@tylertech/forge": "catalog:",
    "@tylertech/forge-angular": "^7.0.0",
    "@tylertech/forge-core": "catalog:",
    "@tylertech/forge-extended": "workspace:^",
    "@tylertech/tyler-icons": "catalog:",
    "rxjs": "~7.5.0",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.11",
    "@angular/cli": "^20.3.11",
    "@angular/compiler-cli": "^20.3.13",
    "@repo/prettier-config": "workspace:",
    "@tylertech-eslint/eslint-plugin": "catalog:",
    "@tylertech-eslint/eslint-plugin-angular": "3.0.0",
    "@tylertech/forge-schematics": "^2.0.0",
    "@types/jasmine": "~5.1.13",
    "@types/node": "catalog:",
    "jasmine-core": "~5.12.1",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.2",
    "typescript": "~5.9.3"
  }
}
